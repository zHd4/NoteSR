<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".crypto.AuthActivity">

    <TextView
        android:id="@+id/authTopLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="@string/enter_access_code"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/censoredPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authTopLabel" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_background"
        android:columnCount="3"
        android:padding="10dp"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5">

        <Button
            android:id="@+id/pinButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_1_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_2_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_3_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_4_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_5_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_6_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_7_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_8_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_9_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButton0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_0_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButtonSpecChars1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_spec_chars1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinButtonSpecChars2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/button_spec_chars2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pinBackspaceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/backspace"
            android:textSize="16sp" />

        <Button
            android:id="@+id/capsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/caps"
            android:textSize="16sp" />

        <Button
            android:id="@+id/changeInputIndexButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/number_1"
            android:textSize="11sp" />

        <Button
            android:id="@+id/authButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@drawable/pin_button"
            android:gravity="center"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="#00FFA6"
            android:textSize="16sp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
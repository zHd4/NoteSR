<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".ui.manage.NoteOpenActivity">

    <EditText
        android:id="@+id/note_name_field"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:textSize="25sp"
        android:backgroundTint="@color/activity_background"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/select_text"
        android:textColorHint="#8F8F8F"
        android:textColorLink="@color/text_color"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/note_text_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/activity_background"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/start_typing"
        android:inputType="textMultiLine|textCapSentences"
        android:scrollbars="vertical"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/select_text"
        android:textColorHint="#8F8F8F"
        android:textColorLink="@color/text_color"
        android:layout_marginTop="53dp"
        android:paddingTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_name_field"
        app:layout_constraintVertical_bias="0.0"
        android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>
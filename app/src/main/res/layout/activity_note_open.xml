<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    tools:context=".activities.NoteOpenActivity">

    <EditText
        android:id="@+id/note_name_field"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:backgroundTint="@color/activity_background"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/select_text"
        android:textColorHint="#8F8F8F"
        android:textColorLink="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/note_text_field"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:backgroundTint="@color/activity_background"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/start_typing"
        android:inputType="textMultiLine|textCapWords"
        android:scrollbars="vertical"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/select_text"
        android:textColorHint="#8F8F8F"
        android:textColorLink="@color/text_color"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_name_field"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="Autofill" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/delete_note"
        android:src="@android:drawable/ic_menu_delete"
        app:backgroundTint="@color/floating_action_button_background"
        android:tint="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/save_note"
        android:src="@android:drawable/ic_menu_save"
        app:backgroundTint="@color/floating_action_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.KeyRecoveryActivity"
    android:background="@color/activity_background">

    <EditText
        android:id="@+id/import_key_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/activity_background"
        android:ems="10"
        android:gravity="start"
        android:hint="@string/paste_or_enter_your_key_here"
        android:inputType="textMultiLine"
        android:minLines="12"
        android:maxLines="12"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/select_text"
        android:textColorHint="#8F8F8F"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        tools:ignore="Autofill"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/decryptButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/button"
        android:text="@string/decrypt"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>